    @section Scripts{
        <!-- Javascript-->
        <!-- Libs JS -->
        <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
        @* <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
        <script src="~/assets/libs/simplebar/dist/simplebar.min.js"></script>

        <!-- Theme JS -->
        <script src="~/assets/js/theme.min.js"></script>
        <script src="https://unpkg.com/vue@3.2.36/dist/vue.global.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // var baseAddress = "https://localhost:7042";
            const storeProductApp = Vue.createApp({
                data: function () {
                    return {
                        addresses: [],
                        addressToDelete: null,
                        addressOriginal: "",
                        addressLine: "",
                        selectedRegion: "",
                        selectedCity: "",
                        isDefaultAddress: false,
                        districts: {
                            '台北市': ['中正區', '大同區', '中山區', '松山區', '大安區', '萬華區', '信義區', '士林區', '北投區', '內湖區', '南港區', '文山區'],
                            '新北市': ['萬里區', '金山區', '板橋區', '汐止區', '深坑區', '石碇區', '瑞芳區', '平溪區', '雙溪區', '貢寮區', '新店區', '坪林區', '烏來區', '永和區', '中和區', '土城區', '三峽區', '樹林區', '鶯歌區', '三重區', '新莊區', '泰山區', '林口區', '蘆洲區', '五股區', '八里區', '淡水區', '三芝區', '石門區'],
                        }
                    }
                },
                computed: {
                },
                mounted: function () {
                    let _this = this;
                    _this.getUserAddresses();
                },
                methods: {
                    setDefaultAddress(item) {
                        let _this = this;
                        axios.put(`/api/UserAddressesapi/${item.userAddressId}`, {
                            UserAddressId: item.userAddressId,
                            UserDetailAddress: item.userDetailAddress,
                            UserId: item.userId,
                            UserCity: item.userCity,
                            UserRegion: item.userRegion,
                            UserName: item.userName,
                            IsDefault: true
                        }).then(response => {
                            if (response.data && response.data === "更新成功!") {
                                Swal.fire({
                                    icon: 'success',
                                    title: '成功!',
                                    text: response.data,
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    text: response.data,
                                });

                            }
                            _this.getUserAddresses();
                        }).catch(err => {
                            Swal.fire({
                                icon: 'error',
                                text: "發生錯誤!"
                            });
                            console.error(err);
                        });
                    },
                    update: function (item) {
                        let _this = this;
                        axios.put(`/api/UserAddressesapi/${item.userAddressId}`, {
                            UserAddressId: item.userAddressId,
                            UserDetailAddress: item.userDetailAddress,
                            UserId: item.userId,
                            UserName: item.userName,
                            UserCity: item.userCity,
                            UserRegion: item.userRegion,
                            IsDefault: item.isDefault
                        }).then(response => {
                            if (response.data === "更新成功!") {
                                _this.getUserAddresses();
                                Swal.fire({
                                    icon: 'success',
                                    title: '成功!',
                                    text: response.data,
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    text: response.data,
                                });
                            }
                            
                        }).catch(err => {
                            Swal.fire({
                                icon: 'error',
                                text: "地址更新發生錯誤!"
                            });
                            console.error(err);
                        });
                    },
                    cancel: function (item) {
                        let _this = this;
                        item.Edit = false;
                        item.userDetailAddress = _this.userAddressOriginal
                    },
                    edit: function (userAddressId) {
                        let _this = this;
                        for (var i = 0; i < _this.addresses.length; i++) {
                            var item = _this.addresses[i];
                            if (userAddressId == _this.addresses[i].userAddressId) {
                                item.Edit = true;
                                _this.userAddressOriginal = item.userDetailAddress;
                            }
                        }
                    },
                    deleteAddressModal: function (item) {
                        this.addressToDelete = item;
                    },
                    deleteAddress: function () {
                        let _this = this;
                        if (this.addressToDelete) {
                            axios.delete(`/api/UserAddressesapi/${this.addressToDelete.userAddressId}`).then(response => {
                                if (response.data === "刪除地址成功!") {
                                    _this.getUserAddresses();
                                    $('#deleteModal').modal('hide');
                                    $('.modal-backdrop').remove();
                                    Swal.fire({
                                        icon: 'success',
                                        title: '成功!',
                                        text: response.data,
                                    });
                                }else{
                                    Swal.fire({
                                        icon: 'error',
                                        text: "地址刪除發生錯誤!"
                                    });
                                }
                                
                            }).catch(err => {
                                Swal.fire({
                                    icon: 'error',
                                    text: response.data
                                });
                                console.error(err);
                            })
                        }
                    },
                    insert: function () {
                        let _this = this;
                        let missingFields = [];
                        if (!_this.selectedCity) {
                            missingFields.push("縣市");
                        }
                        if (!_this.selectedRegion) {
                            missingFields.push("行政區");
                        }
                        if (!_this.addressLine) {
                            missingFields.push("地址");
                        }
                        if (missingFields.length > 0) {
                            Swal.fire({
                                icon: 'error',
                                text: "請填寫以下欄位: " + missingFields.join(", "),
                            });
                            return;
                        }
                        var form = new FormData();
                        var combinedAddress = _this.selectedCity + _this.selectedRegion + _this.addressLine
                        form.append("UserAddressId", 0)
                        form.append("UserId", _this.addresses[0].userId)
                        form.append("UserCity", _this.selectedCity)
                        form.append("UserRegion", _this.selectedRegion)
                        form.append("UserDetailAddress", combinedAddress)
                        form.append("IsDefault", _this.isDefaultAddress)
                        form.append("UserName", _this.addresses[0].userName)
                        // let addressInfo = {
                        //     UserAddressId: -1,
                        //     UserId: _this.addresses[0].userId,
                        //     UserCity: _this.selectedCity,
                        //     UserRegion: _this.selectedRegion,
                        //     UserDetailAddress: combinedAddress
                        // }
                        axios.post(`/api/UserAddressesapi`, form, {
                            headers: {
                                "Content-Type": "multipart/form-data"
                            }
                        }).then(response => {
                            if (response.data === "新增地址成功!") {
                                $('#addAddressModal').modal('hide');
                                $('.modal-backdrop').remove();
                                _this.selectedCity = "";
                                _this.selectedRegion = "";
                                _this.addressLine = "";
                                Swal.fire({
                                    icon: 'success',
                                    title: '成功!',
                                    text: response.data,
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    text: response.data,
                                });
                            }
                            _this.getUserAddresses();                            
                        }).catch(err => {
                            Swal.fire({
                                icon: 'error',
                                text: "地址新增發生錯誤!"
                            });
                            console.log(err)
                        })
                    },
                    getUserAddresses() {
                        let _this = this;
                        var userId = "U001"
                        fetch(`/api/UserAddressesapi/${userId}`, { method: "GET" })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error(`${response.status}`);
                                }
                                return response.json();
                            })
                            .then(data => {
                                _this.addresses = data;
                                for (var i = 0; i < _this.addresses.length; i++) {
                                    var item = _this.addresses[i];
                                    item.Edit = false;
                                }
                            }).catch(error => {
                                Swal.fire({
                                    icon: 'error',
                                    text: "地址載入發生錯誤!"
                                });
                                console.log('error', error);
                            });
                    },
                }
            }).mount("#userAddressesApp")
        </script>
    }
</body>



















