@section Scripts{
    <script src="https://unpkg.com/vue@3.2.36/dist/vue.global.js"></script>
    <script>
        
        var baseAddress ="https://localhost:7042";
        var productApp = Vue.createApp({
            data: function () {
                return {
                productData:[],
                remainingStock: 0,
                number:1
                }
            },
            mounted: function () {
                this.getProductApi();
            
            
            
            },
            watch: {
                number(newValue) {
                    if (newValue > this.remainingStock) {
                        alert("必須小於庫存數量!");
                    }

                }
                
            },
            methods: {
                getProductApi: function () {
                    // fetch(`${baseAddress}/odata/Productapi/GetProduct/${productId}`)
                    fetch(`${baseAddress}/api/Productapi/GetProduct/16`, { method: "GET" })//寫死
                        .then(response => response.json())
                        .then(data => {
                            if (data.length === 0) {
                                alert("目前商品尚未上架");
                            }
                            else {
                                this.remainingStock = data[0].releasedQty - data[0].orderedQty;
                                this.productData = data[0];
                            }
                        })
                        .catch(error => {
                            alert(error);
                        })
                },
                clickMinus() {
                    if (this.number <= 1) {
                        this.number = 1;
                    } else { this.number = this.number - 1; }

                },
                clickAdd() {
                    if (this.number >= this.remainingStock) {
                        alert("必須小於庫存數量!");
                    } else { this.number = this.number + 1; }
                },
                async AddCartItem(productData) {
                    //只能限制加一間>>還沒寫
                    let addItem = {
                        productId: productData.productId,
                        userId: "U001",
                        storeId: productData.storeId,
                        quantity: this.number,
                        productName: productData.productName,
                        storeName: productData.storeName,
                    }; /*  //寫死 */

                    let cartCurrentStoreName = $('#cartItemContainer').find('h6:eq(1)').text();

                    if (productData.storeName != cartCurrentStoreName && cartCurrentStoreName!="") {
                        let isChangeStore = confirm(`目前購物車內商品的店家屬於${cartCurrentStoreName}，是否要挑選其他商家做購買?`);
                        if (isChangeStore == true) {
                            try {
                                //刪除原購物車所有商品
                                await fetch(`${baseAddress}/api/CartVMapi/DeleteUserAllCart/${addItem.userId}`, { method: "DELETE" })


                                //換成新店家
                                let response = await fetch(`${baseAddress}/api/CartVMapi/AddToCart`,
                                    {
                                        method: "POST",
                                        headers: { "Content-Type": "application/json" },
                                        body: JSON.stringify(addItem)
                                    });
                                let data = await response.text();
                                alert(data);
                            } catch (error) { alert("發生錯誤:" + error); }


                        }
                    }
                    else {
                        
                        fetch(`${baseAddress}/api/CartVMapi/AddToCart`,
                            {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify(addItem)
                            }).then(response => response.text())
                            .then(data => {
                                alert(data);

                            })
                            .catch(error => {
                                alert("商品項目新增失敗!");
                            });
                        
                    }
                },


               
            }

        }).mount("#product")
    </script>






