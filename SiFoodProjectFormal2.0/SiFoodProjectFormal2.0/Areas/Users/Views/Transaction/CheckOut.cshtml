@section Scripts {
    <!-- Javascript-->
    <script src="~/assets/libs/flatpickr/dist/flatpickr.min.js"></script>
    <!-- Libs JS -->
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.min.js"></script>
    <!-- Theme JS -->
    <script src="~/assets/js/theme.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js" integrity="sha512-uKQ39gEGiyUJl4AI6L+ekBdGKpGw4xJ55+xyJG7YFlJokPNYegn9KwQ3P8A7aFQAUtUsAQHep+d/lrGqrbPIDQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://unpkg.com/vue@3.2.36/dist/vue.global.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.0/axios.min.js" integrity="sha512-WrdC3CE9vf1nBf58JHepuWT4x24uTacky9fuzw2g/3L9JkihgwZ6Cfv+JGTtNyosOhEmttMtEZ6H3qJWfI7gIQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        var CheckoutApp = {
            data() {
                return {
                    checkRadio: false,
                    selectAddress: "",
                    checkoutDatas: [],
                    orderTime: "",
                    orderNotes: "",
                    checkoutData: {}, //陣列裡面第一筆物件
                    sendBackStoreName: "",
                    sendBackUserName: "",
                    sendBackProductDetail: [],
                    sendBackTotalPrice: null,
                    loading: false,
                }
            },
            computed: {
                totalPrice: function () {
                    var _this = this;
                    var totalPrice = 0;
                    _this.checkoutDatas.forEach(item => {
                        totalPrice += item.totalPrice;
                    });
                    return totalPrice;
                }
            },
            updated() {
                this.processUserName(this.checkoutData.userName);
                this.processStoreName(this.checkoutData.storeName);
                this.processTotalPrice(this.totalPrice);
                this.sendBackProductDetail = this.checkoutDatas.map(item => ({ productName: item.productName, quantity: item.quantity }));

            },
            mounted: function () {
                var _this = this;
                _this.getDataInfo();
                _this.getOrderTime();
            },
            methods: {
                processUserName(userName) {
                    this.sendBackUserName = userName;
                },
                processStoreName(storeName) {
                    this.sendBackStoreName = storeName;
                },
                processProductName(productName) {
                    this.sendBackProductName = productName;
                },
                processTotalPrice(totalPrice) {
                    this.sendBackTotalPrice = totalPrice;
                },
                chooseTakeout: function () {
                    this.checkRadio = true;
                },
                chooseDeliver: function () {
                    this.checkRadio = false;
                },
                createTakeOutOrder: function () {
                    var _this = this;
                    _this.loading = true;
                    axios.post(`/Transaction/TakeOutOrder`, {
                        StoreName: _this.sendBackStoreName,
                        UserName: _this.sendBackUserName,
                        ProductDetails: _this.sendBackProductDetail,
                        TotalPrice: _this.sendBackTotalPrice
                    }, {
                        headers: {
                            "Content-Type": "application/json"
                        }
                    }).then(response => {
                        alert(response.data);
                        var success = "訂單下訂成功!";
                        if (response.data === success) {
                            window.location.href = 'https://localhost:7042/Users/Home/RealTimeOrders'
                        }
                        _this.loading = false;
                    }).catch(err => {
                        alert(err);
                    })
                },
                getOrderTime: function () {
                    var _this = this;
                    var currentDate = new Date();
                    currentDate.setMinutes(currentDate.getMinutes() + 30);
                    var year = currentDate.getFullYear();
                    var month = (currentDate.getMonth() + 1);
                    var day = currentDate.getDate();
                    var hours = currentDate.getHours();
                    var minutes = currentDate.getMinutes();
                    var stringDateTime = year + '-' + month + '-' + day + '  ' + hours + ':' + minutes;
                    _this.orderTime = stringDateTime;
                },
                getDataInfo: function () {
                    var _this = this;
                    axios.get(`/Transaction/GetCheckoutData`)
                        .then(response => {
                            //alert(JSON.stringify(response.data));
                            _this.checkoutDatas = response.data;
                            _this.checkoutData = response.data[0];
                        })
                        .catch(err => {
                            alert(err);
                        });
                },
            },
        }
        var Checkapp = Vue.createApp(CheckoutApp).mount("#CheckOutApp")
    </script>
}
