        .container {
            max-width: 420px;
            margin: 20px auto;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .order-category {
            background-color: rgb(217, 240, 170);
        }

        .order-details {
            padding: 20px;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 20px;
            overflow: auto;
            max-height: 200px;
        }

        .order-details1 {
            display: 0;
            padding: 10px;
            background-color: #ffffff;
            border: 1px solid #98e99b;
            border-radius: 5px;
            margin-top: 10px;
        }

        .box0 {
            background-color: #E8FFF5;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .box0 img {
                height: 40px;
            }

                .box0 img:last-child,
