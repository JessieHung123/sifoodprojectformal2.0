@model SiFoodProjectFormal2._0.Models.User

<div class="modal fade" id="EditUser-@Model.UserId" tabindex="-1" role="dialog" aria-labelledby="EditUserLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditUserLabel">顧客資料修改</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-4">
                    <form asp-action="Edit1" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserId" />
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserEmail" class="control-label"></label>
                            <input asp-for="UserEmail" class="form-control" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>                        
                        <div class="form-group">
                            <label asp-for="UserPasswordHash" class="control-label"></label>
                            <input asp-for="UserPasswordHash" class="form-control" />
                            <span asp-validation-for="UserPasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserPhone" class="control-label"></label>
                            <input asp-for="UserPhone" class="form-control" />
                            <span asp-validation-for="UserPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserBirthDate" class="control-label"></label>
                            <input asp-for="UserBirthDate" class="form-control" />
                            <span asp-validation-for="UserBirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TotalOrderAmount" class="control-label"></label>
                            <input asp-for="TotalOrderAmount" class="form-control" />
                            <span asp-validation-for="TotalOrderAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserEnrollDate" class="control-label"></label>
                            <input asp-for="UserEnrollDate" class="form-control" />
                            <span asp-validation-for="UserEnrollDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserLatestLogInDate" class="control-label"></label>
                            <input asp-for="UserLatestLogInDate" class="form-control" />
                            <span asp-validation-for="UserLatestLogInDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserPasswordSalt" class="control-label"></label>
                            <input asp-for="UserPasswordSalt" class="form-control" />
                            <span asp-validation-for="UserPasswordSalt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserAuthenticated" class="control-label"></label>
                            <input asp-for="UserAuthenticated" class="form-control" />
                            <span asp-validation-for="UserAuthenticated" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserVerificationCode" class="control-label"></label>
                            <input asp-for="UserVerificationCode" class="form-control" />
                            <span asp-validation-for="UserVerificationCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>            
        </div>
    </div>
</div>