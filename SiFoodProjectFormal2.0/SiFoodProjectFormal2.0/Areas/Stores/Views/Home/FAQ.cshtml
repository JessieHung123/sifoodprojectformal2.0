<!-- 引用Layout -->
@{
    Layout = "_Layout";
}

<!-- Title -->
@{
    ViewData["Title"] = "常見問題";
}

<!-- CSS -->
@section Styles {
    <!-- Libs CSS -->
    <link href="~/assets/libs/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/assets/libs/feather-webfont/dist/feather-icons.css" rel="stylesheet">
    <link href="~/assets/libs/simplebar/dist/simplebar.min.css" rel="stylesheet">


    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/assets/css/theme.min.css">
}


<main>
    <!-- section -->
    <div class="mt-4">
        <div class="container">
            <div class="row ">
                <div class="col-12">
                    <!-- breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Main","Home")">店家首頁</a></li>
                            @* <li class="breadcrumb-item"><a href="#!">Blog</a></li> *@
                            <li class="breadcrumb-item active" aria-current="page">常見問題</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- section -->
    <section class="my-lg-14 my-8">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <!-- text -->
                    <div class="mb-5">
                        <div class="mb-3 text-center"><a href="">店家</a></div>
                        <h1 class="fw-bold text-center">常見問題</h1>
                    </div>
                    <!-- img -->
                    <div class="mb-8">
                        <img src="~/assets/images/FAQ/FAQ_Stores.png" alt="" class="img-fluid rounded">
                    </div>

                    <div>
                        <!-- text -->
                        <div class="mb-4">

                            <!-- Accordion Example -->

                            <div class="accordion" id="accordionExample">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingOne">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapseOne" aria-expanded="true"
                                                aria-controls="collapseOne">
                                            Q1:店家照片為什麼不能修改
                                        </button>
                                    </h2>
                                    <div id="collapseOne" class="accordion-collapse collapse show"
                                         aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <strong>為了維護平台風格一至性並確保品質，店家照片請先上傳給我們審核</strong>
                                            如要修改照片，請email給我們
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingTwo">
                                        <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapseTwo"
                                                aria-expanded="false" aria-controls="collapseTwo">
                                            Q2:我要怎麼幫忙推廣惜食
                                        </button>
                                    </h2>
                                    <div id="collapseTwo" class="accordion-collapse collapse"
                                         aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <strong>可以按下方分享按鈕喔.</strong>
                                            如果太難做就不分享了.
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingThree">
                                        <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapseThree"
                                                aria-expanded="false" aria-controls="collapseThree">
                                            Q3
                                        </button>
                                    </h2>
                                    <div id="collapseThree" class="accordion-collapse collapse"
                                         aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <strong>Ans3</strong>
                                            待產文案.
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <hr class="mt-lg-10 mb-lg-6 my-md-6">
                        <!-- blockquote -->
                        <blockquote class="blockquote text-center ">
                            <p class="text-primary fst-italic fw-semi-bold lh-base h1 px-2 px-lg-14">
                                "歡迎加入惜食，一起愛護地球"
                            </p>
                            <p class="text-primary fst-italic fw-semi-bold lh-base h1 px-2 px-lg-14">
                                「你必須成為你希望在這個世界上看見的改變。(You must be the change you want to see in the world.)」
                            </p>
                            <footer class="blockquote-footer mt-3 text-muted">
                                <cite title="Source Title">甘地(Mahatma Gandhi)</cite>
                            </footer>
                        </blockquote>
                        <hr class="mt-lg-6 mb-lg-10 my-md-6">

                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <div class="d-flex align-items-center">
                                <img src="~/images/sifood_logo_bgclear.png" alt=""
                                     class="rounded-circle avatar-md">
                                <div class="ms-2 lh-1">
                                    <h5 class="mb-0 ">惜食</h5>
                                    <span class="text-primary small">珍惜食材</span>
                                </div>
                            </div>
                            <div>
                                <!-- social -->
                                <span class="ms-2 text-muted">Share</span>
                                <a href="#" class="ms-2 text-muted"><i class="bi bi-facebook fs-6"></i></a>
                                <a href="#" class="ms-2 text-muted"><i class="bi bi-twitter fs-6"></i></a>
                                <a href="#" class="ms-2 text-muted "><i class="bi bi-linkedin fs-6"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</main>


@section Scripts {
    <!-- Javascript-->
    <!-- Libs JS -->
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.min.js"></script>

    <!-- Theme JS -->
    <script src="~/assets/js/theme.min.js"></script>

}