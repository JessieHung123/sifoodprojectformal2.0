<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SiFoodProjectFormal2._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/theme.min.css">
    <link href="~/assets/libs/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SiFoodProjectFormal2._0.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body style="background-color: #FFF8DC;">
    <header id="header">
        <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5 py-lg-0">
            <a href="@Url.Action("Main", "Home")" class="navbar-brand d-flex align-items-center">
                <h1 class="m-0">
                    <i class="fa fa-building text-primary me-3"></i>Sifood
                    <img src="~/images/SiFood_logo_BGclear.png" alt="Site Logo" style="height:70px; width: 90px" class="navbar-brand"  />       
                </h1>
            </a>
            <button type="button"
                    class="navbar-toggler"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-3 py-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-item nav-link active" asp-area="Stores" asp-controller="Home" asp-action="Main">首頁</a>
                        <a class="nav-item nav-link" asp-area="Stores" asp-controller="Home" asp-action="RealTimeOrders">及時訂單</a>
                        <a class="nav-item nav-link" asp-area="Stores" asp-controller="Home" asp-action="History">歷史訂單</a>
                        <a class="nav-item nav-link" asp-area="Stores" asp-controller="Home" asp-action="ProductManage">商品管理</a>
                        <a class="nav-item nav-link" asp-area="Stores" asp-controller="Home" asp-action="InfoModify">資料修改</a>
                        <a class="nav-item nav-link" asp-area="Stores" asp-controller="Home" asp-action="Review">客戶評價</a>
                        <a class="nav-item nav-link" asp-area="Stores" asp-controller="Home" asp-action="FAQ">常見問題</a>
                        <button type="button" class="nav-item nav-link" onclick="logout()" >登出</button>
                    }
                    else
                    {
                    }
                </div>
            </div>
            </nav>
    </header>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
 <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script src="https://unpkg.com/vue@3.2.36/dist/vue.global.js"></script>
    <script>
        async function logout() {
            await fetch(`/Account/StoreLogout`, {
                method: "GET",
                headers: { "Content-Type": "application/json" },
                credentials: 'include',
            }).then(response => {
                if (response.ok) {
                    setTimeout(() => {
                        window.location.href = "/Stores/Account/Login";
                        alert("已成功登出");
                    }, 1000);
                }
            }).catch(error => alert("發生錯誤"));
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

